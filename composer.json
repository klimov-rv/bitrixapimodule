{
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "dyorg/slim-token-authentication": "^0.3.3",
        "firebase/php-jwt": "^6.0",
        "palanik/corsslim": "dev-slim3",
        "phpunit/phpunit": "^9",
        "respect/validation": "^1.1",
        "slim/http-cache": "0.*",
        "slim/slim": "^3.12.3",
        "symfony/event-dispatcher": "5.*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Sotbit\\RestAPI\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "coverage": "phpunit --coverage-html=coverage --coverage-text",
        "test": "phpunit"
    }
}
